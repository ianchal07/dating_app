
<% for(var i = 0; i < messageData.length; i++) { %>
<% if(messageData[i].from_user_id=== user.username) { %>
    <div class="chat-message-right pb-4">
        <div>
            <img src="uploads/<%=user.profile_pic%>"
                class="rounded-circle mr-1" alt="Chris Wood" width="40" height="40">
        </div>
        <div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
            <div class="font-weight-bold mb-1">You</div>
            <%= messageData[i].message%>
        </div>
    </div>
    <% } else if(messageData[i].to_user_id===user.username) { %>
    <div class="chat-message-left pb-4">
        <div>
            <img src="uploads/<%=friend.profile_pic%>"
                class="rounded-circle mr-1" alt="<%= friend.firstname%>" width="40" height="40">
        </div>
        <div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
            <div class="font-weight-bold mb-1"><%= friend.firstname%> <%= friend.lastname%></div>
            <%= messageData[i].message%>
        </div>
    </div>
        <% } %>  
<% } %>  