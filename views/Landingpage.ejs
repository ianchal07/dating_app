      <!-- this is for login  -->
      <div class="modal fade" id="login" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="background-color: #dc323200;">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Milaap</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
        
                <main class="form-signin text-center">
                    <form action="/login" method="post">
                      <h1 class="h3 mb-3 fw-normal text-muted">Please sign in</h1>
                  
                      <div class="form-floating my-2">
                        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                      </div>
                      <div class="form-floating my-2 ">
                        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                      </div>
                  
                      <button class="w-75 my-5 btn btn-lg btn-outline-primary" type="submit">Sign in</button>
        
                    </form>
    
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
      <!-- this is for signup -->
      <div class="modal fade" id="signup" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Milaap</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
        
                <main class="form-signin text-center">
                    <form   action="/sign-up" method="post">
                      <h1 class="h3 mb-3 fw-normal text-muted">Please sign up</h1>
                      <div class="form-floating my-2">
                        <input name="username" type="text" class="form-control" placeholder="username">
                        <label for="floatingInput">username must be unique</label>
                      </div>
                      <div class="form-floating my-2">
                        <input name="firstname" type="text" class="form-control" placeholder="First   name">
                        <label for="floatingInput">First name</label>
                      </div>
                      <div class="form-floating my-2">
                        <input name="lastname" type="text" class="form-control" placeholder="Last   name">
                        <label for="floatingInput">Last name</label>
                      </div>
                      <div class="form-floating my-2">
                        <input name="age" type="number" class="form-control" placeholder="age" min="0" max="100">
                        <label for="floatingInput">Age</label>
                      </div>
                      
                      <div  class="form-floating my-2">
                        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                      </div>
                      <div  class="form-floating my-2 ">
                        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                      </div>
                      <div  class="form-floating my-2 ">
                        <input name="confirmpassword" type="password" class="form-control" id="floatingPassword" placeholder=" confirm Password">
                        <label for="floatingPassword"> Confirm Password</label>
                      </div>
                      <div class="btn-group">
                        <input  type="radio" class="btn-check"  id="option1" autocomplete="off" checked disabled />
                        <label class="btn btn-outline-danger" for="option1">gender</label>
                      
                        <input  name="gender" type="radio" class="btn-check" id="option2" value="male" autocomplete="off" />
                        <label class="btn btn-secondary" for="option2">Male</label>
                      
                        <input  name="gender" type="radio" class="btn-check" id="option3" value="female" autocomplete="off" />
                        <label class="btn btn-light" for="option3">Female</label>
                      </div>
                      <button class="w-75 my-5 btn btn-lg btn-outline-primary" type="submit">signup</button>
        
                    </form>
    
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
