                  </div>
                  <div class="form-floating my-2 ">
                    <button class="btn btn-outlline-primary" data-bs-toggle="modal" data-bs-dismiss="modal" type="button"  data-bs-target="#edit_interest">Edit interest </button>
                   
                  </div>
              
                 
    
          

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>



  <!-- this is for change profile photo -->
  <div class="modal fade" id="change_profile_photo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" style="background-color: #dc323200;">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Milaap</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
    
            <main class="form-signin text-center">
                <form action="/user/change_profile_pic?id=<%=data.username%>&password=<%=data.password%>" method="post"  enctype="multipart/form-data">
                  <h1 class="h3 mb-3 fw-normal text-muted">Change profile picture</h1>
              
                  <div class="form-floating my-2">
                    <input  name="profile_pic" type="file" accept="image/*" class="form-control" id="floatingInput" placeholder="upload image ">
                    <label for="floatingInput"> Upload image</label>
                  </div>
                  <button class="w-75 my-5 btn btn-lg btn-outline-primary" type="submit">submit</button>
    
                </form>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary"  data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<!-- this is for upload photo -->
<div class="modal fade" id="upload_photo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" style="background-color: #dc323200;">
